{
    "name": "spt-expanded-scav-karma",
    "displayName": "SPT Expanded Scav Karma",
    "version": "3.0.1",
    "main": "src/mod.js",
    "license": "MIT",
    "author": "citharus",
    "akiVersion": "3.1.0",
    "scripts": {
        "build": "tsc --build",
        "build:dist": "tsc --build && mkdirp dist/scav-karma && copyfiles src/**/*.js config/**/* package.json LICENSE dist/scav-karma",
        "zip": "mkdirp build/ && cd dist/ && bestzip --level 9 ../build/mod.zip *",
        "build:release": "npm run clean && npm run build:dist && npm run zip && npm run clean",
        "clean": "tsc --build --clean"
    },
    "devDependencies": {
        "@types/node": "^14.15.3",
        "@typescript-eslint/eslint-plugin": "^4.33.0",
        "@typescript-eslint/parser": "^4.33.0",
        "tsyringe": "4.6.0",
        "typescript": "4.6.4",
        "copyfiles": "2.4.1",
        "bestzip": "2.2.1",
        "eslint": "7.26.0",
        "winston": "^3.8.1"
    }
}
